<%= form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:date, Day.all, :id, :date) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :period, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :period, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :trade, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:trade_id, Trade.all, :id, :trade) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :instructor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :instructor, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :activity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :activity, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn' %>
  </div>
<% end %>
